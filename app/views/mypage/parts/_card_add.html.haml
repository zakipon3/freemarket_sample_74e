.mypage__content
  .card__add__title
    %p クレジットカード情報入力
  = form_with url:creditcards_path, method: :post, html: { name: "inputForm" },class:"form" do |f|
    .form__upper
      .form__upper__group
        = f.label :カード番号
        %span.form-require 必須
        = f.text_field :card_number, name: "card_number", id:"card_number", type: "text", placeholder: '半角数字のみ', class: 'input-default', maxlength: "16"
        .card_list
          = image_tag asset_path("material/icon/visa.svg"), alt: 'test', height: '20px', width: '40px'
          = image_tag asset_path("material/icon/master-card.svg"), alt: 'test', height: '20px', width: '40px'
          = image_tag asset_path("material/icon/jcb.svg"), alt: 'test', height: '20px', width: '40px'
          = image_tag asset_path("material/icon/saison-card.svg"), alt: 'test', height: '20px', width: '40px'
          = image_tag asset_path("material/icon/american_express.svg"), alt: 'test', height: '20px', width: '40px'
          = image_tag asset_path("material/icon/discover.svg"), alt: 'test', height: '20px', width: '40px'
          = image_tag asset_path("material/icon/dinersclub.svg"), alt: 'test', height: '20px', width: '40px'
      .form__upper__group.exp
        .name
          = f.label :有効期限
          %span.form-require 必須
        = f.select :exp_year, [["19",2019],["20",2020],["21",2021],["22",2022],["23",2023],["24",2024],["25",2025],["26",2026],["27",2027],["28",2028],["29",2029]], {}, class: 'input-default harf', name: "exp_year", id:"exp_year"
        %span 年
        = f.select :exp_month, [["01",1],["02",2],["03",3],["04",4],["05",5],["06",6],["07",7],["08",8],["09",9],["10",10],["11",11],["12",12]],{}, class: 'input-default harf', name: "exp_month", id:"exp_month"
        %span 月
      .form__upper__group
        = f.label :セキュリティーコード
        %span.form-require 必須
        = f.text_field :cvc, name: "cvc", id:"cvc", class:"cvc", type: "text", placeholder: 'カード背面4桁もしくは3桁の番号', class: 'input-default', maxlength: "16"
      .form__upper__group
        %p.about
          %span
      .form__upper__group
        = f.submit '次へ進む', class: 'btn-default', id: "charge-form"

